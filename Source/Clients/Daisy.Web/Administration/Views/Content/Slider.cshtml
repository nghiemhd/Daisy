@model Daisy.Admin.Models.SliderViewModel
@{
    ViewBag.Title = "Slider";
}

<div class="spacer btn-group">
    <button id="btnDeletePhotos" data-request-url="@Url.Action("DeleteSliderPhotos", "Content")" class="btn btn-primary">Delete photos</button>
    @Html.ActionLink("Add photos", "ViewPhotos", "Content", null, new { @class = "modal-link btn btn-primary" })
</div>
<hr />
@Html.HiddenFor(x => x.Id, new { id = "sliderId" })
@if (@Model != null)
{
    <div id="modal-container" class="modal fade" tabindex="-1" role="dialog" style="overflow:scroll">
        <div class="modal-content"></div>
    </div>

    if(@Model.Photos.Count > 0)
    { 
        <div>
            <input type="checkbox" id="chkSelectAll">&nbsp;Select all
        </div>
        <div id="gridSliderPhotos" class="container-fluid">
            @foreach (var photo in @Model.Photos)
            {
                <div class="col-sm-6 col-md-6 col-lg-4" style="background-color:#101010;">
                    <div class="album-thumbnail photo-list-album-view" style="background-image:url(@photo.MediumUrl)">
                    </div>
                    <div class="album-title">
                        <input type="checkbox" value="@photo.Id">&nbsp;@photo.Id
                    </div>
                </div>
            }
        </div>
    }
}
<div id="loader" class="overlay" style="display:none">
    <img class="loader" src="~/Administration/Images/loading.gif" />
</div>
@section scripts
{
    <script src="~/Administration/Scripts/Content/SliderMain.js"></script>
<script src="~/Administration/Scripts/Content/Slider.js"></script>
}






