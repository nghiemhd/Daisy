@model Daisy.Admin.Models.Blog

<div class="form-horizontal">
    <div class="form-group">
        @Html.LabelFor(x => x.Title, new { @class = "col-md-1" })
        <div class="col-md-3">
            @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.IsPublished, new { @class = "col-md-1" })
        <div class="col-md-3">            
            @Html.CheckBoxFor(x => x.IsPublished, new { @id = "test", @class = "css-checkbox lrg" })
            <label for="test" class="css-label lrg klaus"></label>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Content, new { @class = "col-md-1" })
        <div class="col-md-10">
            @Html.TextAreaFor(x => x.Content, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-1 col-md-1">
            <input type="submit" class="btn btn-primary" value="Save" />
        </div>
    </div>
</div>
