@using Daisy.Web.Framework.Extentions
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Daisy Admin</title>
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800" rel="stylesheet" type="text/css">
    <link href="http://fonts.googleapis.com/css?family=Josefin+Slab:100,300,400,600,700,100italic,300italic,400italic,600italic,700italic" rel="stylesheet" type="text/css">
    <link href='http://fonts.googleapis.com/css?family=Open+Sans+Condensed:300' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Noto+Serif:400,400italic,700,700italic&subset=latin,vietnamese' rel='stylesheet' type='text/css'>
    @Styles.Render("~/Content/admin/css")
    @Scripts.Render("~/bundles/admin/modernizr")
    @Scripts.Render("~/bundles/admin/jquery")
    @Scripts.Render("~/bundles/admin/bootstrap")
    @Html.RenderRequiredScripts(RenderOptions.Head)
    @RenderSection("styles", false)    
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Daisy studio", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Catalog
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Albums", "Index", "Album")</li>
                            <li>@Html.ActionLink("Categories", "Index", "Category")</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Flickr albums", "Index", "FlickrAlbum")</li>
                    <li>@Html.ActionLink("Quote", "Index", "Quote")</li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Content
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Slider", "Slider", "Content")</li>
                            <li>@Html.ActionLink("Blogs", "Index", "Blog")</li>
                        </ul>
                    </li>
                </ul>
                @Html.Partial("_LogonPartial")
            </div>
        </div>
    </div>
    <div class="container-fluid">
        @RenderBody()
        <hr />        
    </div>
    <div class="container-fluid">
        <footer>
            <p>&copy; @DateTime.Now.Year - Daisy studio</p>
        </footer>
    </div>
        
    @RenderSection("scripts", required: false)
    @Html.RenderRequiredScripts(RenderOptions.Body)

    <script>
        Common.Helper.applicationRoot = '@Url.Content("~")';
    </script>
</body>
</html>
