<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Daisy Admin</title>
    @Styles.Render("~/Content/admin/css")
    @Scripts.Render("~/bundles/admin/modernizr")
    <style>
        .modal-content {
            width: 800px !important;
            margin: 30px auto !important;
        }
    </style>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Daisy studio", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Albums", "Index", "Album")</li>
                    <li>@Html.ActionLink("Flickr albums", "Index", "FlickrAlbum")</li>
                    <li>@Html.ActionLink("Quote", "Index", "Quote")</li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Content
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Slider", "Slider", "Content")</li>
                            <li>@Html.ActionLink("Blogs", "Blogs", "Content")</li>
                        </ul>
                    </li>
                </ul>
                @Html.Partial("_LogonPartial")
            </div>
        </div>
    </div>
    <div class="container-fluid">
        @RenderBody()
        <hr />        
    </div>
    <div class="container-fluid">
        <footer>
            <p>&copy; @DateTime.Now.Year - Daisy studio</p>
        </footer>
    </div>
    
    @Scripts.Render("~/bundles/admin/jquery")
    @Scripts.Render("~/bundles/admin/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
