@using Daisy.Web.Framework.Extentions
@model Daisy.Admin.Models.PagedListPhotoViewModel

<div class="modal-body">
    <div class="spacer btn-group">
        <button id="btnSave" class="btn btn-primary">Save</button>
    </div>
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <hr />
    <div class="spacer">
        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(x => x.SearchOptions.AlbumName, new { @class = "control-label col-sm-1" })
                <div class="col-sm-3">
                    @Html.TextBoxFor(x => x.SearchOptions.AlbumName, new { id = "txtAlbumName", @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.SearchOptions.IsPublished, new { @class = "control-label col-sm-1" })
                <div class="col-sm-3">
                    <select id="cboPublishStatus" class="form-control dropdown">
                        <option>All</option>
                        <option value="true">Published</option>
                        <option value="false">Unpublished</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-1 col-sm-3">
                    <button id="btnSearch" data-request-url="@Url.Action("SearchPhotos", "Content")" class="btn btn-primary">Search</button>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid spacer">
        <div class="form-inline">
            <div id="paging" class="form-group"></div>
            <div id="searchResultInfo" class="form-group" style="float:right;margin-top:20px;"></div>
        </div>
    </div>
    <div id="divSelectAll" class="container-fluid" style="display:none">
        <input type="checkbox" id="chkSelectAllPhotos">&nbsp;Select all
    </div>
    <div id="gridPhotos" class="container-fluid"></div>
    <div id="loader" class="overlay" style="display:none">
        <img class="loader" src="~/Administration/Images/loading.gif" />
    </div>
</div>