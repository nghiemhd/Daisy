@model List<Daisy.Admin.Models.Category>
@{
    ViewBag.Title = "Categories";
}
<div class="spacer btn-group">
    <button id="btnAddCategory" class="btn btn-primary" type="button" onclick="location.href='@Url.Action("Create", "Category")'">Add category</button>
</div>

<div id="gridCategories" class="container-fluid table-responsive spacer">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    <input type="checkbox" id="chkSelectAll" class="css-checkbox lrg" />
                    <label for="chkSelectAll" class="css-label lrg klaus"></label>
                </th>
                <th>Name</th>
                <th>Language</th>
                <th>Published</th>
                <th>Display order</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var category in Model)
                {
                    <tr>
                        <td>
                            <input type="checkbox" id="_@category.Id" value="@category.Id" class="css-checkbox lrg" />
                            <label for="_@category.Id" class="css-label lrg klaus"></label>
                        </td>
                        <td>@Html.ActionLink(category.Name, "Edit", "Category", new { id = category.Id }, new { @class = "table-link" })</td>
                        <td>@category.Language</td>
                        <td>@category.IsPublished</td>
                        <td>@category.DisplayOrder</td>
                    </tr>                
                }
            }
        </tbody>

    </table>
</div>
<div id="loader" class="overlay" style="display:none">
    <img class="loader" src="~/Administration/Images/loading.gif" />
</div>