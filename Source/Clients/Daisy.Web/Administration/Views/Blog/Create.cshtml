@model Daisy.Admin.Models.Blog
@{
    ViewBag.Title = "New blog";
}
<div class="spacer"></div>
@using (Html.BeginForm("Create", "Blog", FormMethod.Post))
{
    Html.RenderPartial("_Blog", @Model);
}

@section scripts{
    <script type="text/javascript" src="~/Administration/Scripts/tinymce/tinymce.min.js"></script>
    <script type="text/javascript">
        function LoadTinymce() {
            tinymce.init({
                mode: "textareas",
                editor_selector: "mceEditor",
                theme: "modern",
                plugins: [
                    "advlist autolink lists link image charmap print preview anchor",
                    "searchreplace visualblocks code fullscreen",
                    "insertdatetime media table contextmenu paste"
                ],
                toolbar: "insertfile undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image"
            });
        }
        

        $(document).ready(function () {

            $('#btnToggle').click(function () {
                LoadTinymce();
            });

            $('#btnSubmit').click(function () {
                debugger
                //tinyMCE.triggerSave();
            });
        });
    </script>
}