@{
    ViewBag.Title = "Contact";
}

<div class="col-lg-8">
    <h2><span>Bản đồ</span></h2>
    <div id="gmap_canvas"></div>
    <div class="spacer">
        <p>
            CC A4 LÔ K, PHÒNG 205, ĐƯỜNG PHAN XÍCH LONG<br />
            PHƯỜNG 7, QUẬN PHÚ NHUẬN, HCM<br /><br />
            <span class="glyphicon glyphicon-envelope"></span> daisystudio@gmail.com<br />
            <span class="glyphicon glyphicon-earphone"></span> 0987654321
        </p>
    </div>
</div>
<div class="col-lg-4">
    <h2><span>Góp ý</span></h2>
    <div class="form-group">
        <input type="text" class="form-control" placeholder="Họ tên" />
    </div>
    <div class="form-group">
        <input type="tel" class="form-control" placeholder="Số điện thoại" />
    </div>
    <div class="form-group">
        <input type="email" class="form-control" placeholder="Email" />   
    </div>
    <div class="form-group">
        <textarea class="form-control" placeholder="Nội dung góp ý" style="height:200px;resize:none;"></textarea>
    </div>
    <div class="form-group">
        <input type="button" class="btn btn-default" value="Xóa" />
        <input type="button" class="btn btn-default" value="Gửi" />
    </div>    
</div>

@section scripts
{
    <script src="https://maps.googleapis.com/maps/api/js"></script>
    <script type="text/javascript">
        function init_map() {
            var myOptions = {
                zoom: 17,
                center: new google.maps.LatLng(10.799046216498686, 106.68760750503236),
                mapTypeId: google.maps.MapTypeId.ROADMAP
            };
            map = new google.maps.Map(document.getElementById("gmap_canvas"), myOptions);
            marker = new google.maps.Marker({
                map: map,
                position: new google.maps.LatLng(10.799046216498686, 106.68760750503236)
            });
            infowindow = new google.maps.InfoWindow({
                content: '<span style="color:#000"><b>Daisy studio</b><br/>Chung cư A4, lô K, Phan Xích Long<br/>Phú Nhuận, HCM</span>'
            });
            google.maps.event.addListener(marker, "click", function () { infowindow.open(map, marker); });
            infowindow.open(map, marker);
        }
        google.maps.event.addDomListener(window, 'load', init_map);
    </script>
}